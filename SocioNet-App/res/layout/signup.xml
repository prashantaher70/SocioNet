<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SignUpScreen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="5dp"
    android:textAlignment="center"
    android:visibility="visible" >

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp" >

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="300dp" >
    </TableRow>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/toUserName"
        android:layout_alignLeft="@+id/tableRow1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tableRow3"
        android:layout_marginTop="50dp"
        android:padding="0px"
        android:text="Sign Up Page"
        android:textColor="#762C54"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tableRow1"
        android:ems="10"
        android:hint="Username"
        android:maxLength="20"
        android:textAlignment="center" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toUserName"
        android:layout_alignBottom="@+id/toUserName"
        android:layout_alignLeft="@+id/ConfirmPassword"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/collegeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TextView01"
        android:ems="10"
        android:hint="College Name"
        android:inputType="text"
        android:maxLength="10"
        android:textAlignment="center"
        android:textIsSelectable="false" />

    <EditText
        android:id="@+id/Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/text99"
        android:layout_toRightOf="@+id/textView3"
        android:ems="10"
        android:hint="00"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tableRow5"
        android:paddingLeft="2dp"
        android:text="Username"
        android:textColor="#762C54"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/tableRow1"
        android:ems="10"
        android:hint="Retype Password"
        android:inputType="textPassword"
        android:maxLength="10"
        android:textIsSelectable="false" />

    <Button
        android:id="@+id/SignUpButton"
        style="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#762C54"
        android:gravity="center_vertical|center_horizontal"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableRow2"
        android:layout_below="@+id/tableRow2"
        android:text="Gender"
        android:textColor="#762C54"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tableRow1"
        android:ems="10"
        android:hint="M or F"
        android:inputType="text"
        android:maxLength="10"
        android:textAlignment="center"
        android:textIsSelectable="false" />

    <EditText
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tableRow4"
        android:ems="10"
        android:hint="Name of city"
        android:inputType="text"
        android:maxLength="10"
        android:textAlignment="center"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableRow4"
        android:layout_below="@+id/tableRow4"
        android:text="City"
        android:textColor="#762C54"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/TextView02"
        android:layout_below="@+id/tableRow3"
        android:text="College"
        android:textColor="#762C54"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableRow3"
        android:layout_below="@+id/collegeName"
        android:layout_marginTop="18dp"
        android:text="Age"
        android:textAlignment="center"
        android:textColor="#762C54"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/toUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/tableRow1"
        android:text="Password"
        android:textColor="#762C54"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Password"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/ConfirmPassword"
        android:padding="0px"
        android:text="Confirm Password"
        android:textColor="#762C54"
        android:textSize="17sp" />

</RelativeLayout>